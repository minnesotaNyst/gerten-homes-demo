<div class="row container">
  <div class="login-container col s12 m6">
    <h4 class="header">Login</h4>
    <form class="login-form">
      <div>
        <label for="email-login">email:</label>
        <input type="text" id="email-login" />
      </div>
      <div>
        <label for="password-login">password:</label>
        <input type="password" id="password-login" />
      </div>
      <div>
        <button type="submit" class="btn-large waves-effect waves-light orange white-text">login</button>
      </div>
    </form>
  </div>
  <div class="login-container col s12 m6">
    <h4 class="header">Sign-Up</h4>
    <form class="signup-form">
      <div>
        <label for="username-signup">username:</label>
        <input type="text" id="username-signup" />
      </div>
      <div>
        <label for="email-signup">email:</label>
        <input type="text" id="email-signup" />
      </div>
      <div>
        <label for="password-signup">password:</label>
        <input type="password" id="password-signup" />
      </div>
      <div>
        <button type="submit" class="btn-large waves-effect waves-light orange white-text">signup</button>
      </div>
    </form>
  </div>
</div>