<div class="container row">

  <form class="login-form col s12 m6">
    <h3 class="header">Login</h3>
    <div>
      <label for="email-login">email:</label>
      <input type="text" id="email-login" />
    </div>
    <div>
      <label for="password-login">password:</label>
      <input type="password" id="password-login" />
    </div>
    <div>
      <button class="btn-large waves-effect waves-light orange white-text" type="submit">login</button>
    </div>
  </form>


  <form class="signup-form col s12 m6">
    <h3 class="header">Sign-up</h3>
    <div>
      <label for="username-signup">username:</label>
      <input type="text" id="username-signup" />
    </div>
    <div>
      <label for="email-signup">email:</label>
      <input type="text" id="email-signup" />
    </div>
    <div>
      <label for="password-signup">password:</label>
      <input type="password" id="password-signup" />
    </div>
    <div>
      <button class="btn-large waves-effect waves-light orange white-text" type="submit">signup</button>
    </div>
  </form>
</div>
<script src="/js/login.js"></script>
